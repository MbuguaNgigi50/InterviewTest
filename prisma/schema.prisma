generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id            String    @id @default(cuid())
  password      String?
  email         String?   @unique

  sessions      Session[]
  @@unique([id, email])
  @@map(name: "Users")
}

model Products {
  id String @id @default(cuid())
  productName String
}

model Plans {
  id String @id @default(cuid())
  planName String
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime

  user      User     @relation(references: [id], fields: [userId], onDelete: Cascade)
}